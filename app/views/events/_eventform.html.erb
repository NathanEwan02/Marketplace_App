<%= form_with model: @event do |f| %>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
    <div>
        <%= f.label :date %>
        <%= f.date_field :name %>
    </div>
    <div>
        <%= f.label :location %>
        <%= f.text_field :location %>
    </div>
    <div>
        <%= f.label :game_id %>
        <%= f.collection_select :game_id, @games, :id, :name %>
    </div>
    <div>
        <%= f.submit caption %>
    </div>
<% end %>
