<%= form_with model: @event do |f| %>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :image %>
        <%= f.file_field :image %>
    </p>
    <p>
        <%= f.hidden_field :creator_id, value: current_user.id %>
    </p>
    <p>
        <%= f.label :date %>
        <%= f.date_field :date %>
    </p>
    <p>
        <%= f.label :location %>
        <%= f.text_field :location %>
    </p>
    <p>
        <%= f.label :game_id %>
        <%= f.collection_select :game_id, @games, :id, :name %>
    </p>
    <p>
        <%= f.submit caption %>
    </p>
<% end %>
